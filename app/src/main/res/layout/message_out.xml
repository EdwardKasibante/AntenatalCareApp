<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_gravity="top|end"
    android:gravity="end"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/now_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_out_drawable"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="normal|bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/mine"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_below="@id/now_here"
        android:id="@+id/image_lay"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/mine"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/msg_img"
            android:background="@drawable/for_message"
            android:scaleType="centerCrop"
            android:layout_height="150dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="You Sent"
        android:id="@+id/msg_date"
        android:textColor="@color/colorAccent"
        android:padding="5dp"
        android:layout_height="wrap_content"/>


</LinearLayout>