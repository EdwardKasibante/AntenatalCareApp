<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Subject of the Message"
            android:inputType="text|textMultiLine|textLongMessage|textAutoComplete"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Content of the Message"
            android:inputType="text|textMultiLine|textLongMessage|textAutoComplete"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="Pregnancy Time"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_card"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:text="First Trimester"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Second Trimester"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:text="Third Trimester"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/anytime"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Anytime Useful"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="Pregnancy Time"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_card"
        android:layout_height="45dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"

            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:text="Post "
            android:layout_weight="1"
            android:id="@+id/btn_save"
            android:onClick="login_user"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/teal_700"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>